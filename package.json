{
    "name": "@soundslikeodd/package-banner",
    "version": "1.0.1",
    "description": "NPM package banner generator.",
    "scripts": {
        "build": "babel index.js -d commonjs",
        "pretest": "eslint --ext .js .",
        "test": "c8 mocha",
        "prepare": "husky install"
    },
    "main": "commonjs/index.js",
    "module": "index.js",
    "type": "module",
    "exports": {
        ".": {
            "require": "./commonjs/index.js",
            "default": "./index.js"
        }
    },
    "files": [
        "./index.js",
        "./commonjs/*",
        "./bin/*"
    ],
    "bin": {
        "package-banner": "./bin/package-banner.js"
    },
    "engines": {
        "node": ">=14.16"
    },
    "author": {
        "name": "soundslikeodd"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/soundslikeodd/package-banner.git"
    },
    "license": "ISC",
    "dependencies": {
        "ansi-align": "^3.0.1",
        "figlet": "^1.6.0",
        "yargs": "^17.7.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.21.5",
        "@babel/core": "^7.21.8",
        "@babel/plugin-transform-modules-commonjs": "^7.21.5",
        "c8": "^7.13.0",
        "chai": "^4.3.7",
        "eslint": "^8.39.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "mocha": "^10.2.0",
        "rollup": "^3.21.5"
    },
    "lint-staged": {
        "*.{js,cjs}": "eslint --ext .js,.cjs ."
    }
}
